# ======================
# DATABASE CONFIGURATION
# ======================
# Option 1: Local PostgreSQL (requires Pinggy tunnel for Colab)
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_password

# Option 2: Neon DB (Recommended - Free tier with pgvector)
# Get yours at: https://neon.tech
DATABASE_URL=postgresql://username:password@your-neon-host.neon.tech/dbname?sslmode=require
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=neondb
DB_USER=your_username
DB_PASSWORD=your_password

# ======================
# API KEYS
# ======================
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# HuggingFace Authentication (Optional - only needed for private models)
# Get token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_hf_token_here

# ======================
# MODEL CONFIGURATIONS
# ======================
# Whisper Model
WHISPER_MODEL_SIZE=large-v3-turbo # or large-v3
WHISPER_DEVICE=auto  # Auto - 'cuda' or 'cpu' if no GPU
WHISPER_COMPUTE_TYPE=auto  # Auto - float16 for GPU, int8 for CPU

# IndicBERT Model for Memory Embeddings
INDICBERT_MODEL_NAME=l3cube-pune/indic-sentence-similarity-sbert
INDICBERT_DEVICE=auto  # Auto-detect: 'cuda' or 'cpu'

# Parler TTS Model
PARLER_TTS_MODEL=ai4bharat/indic-parler-tts

# Gemini LLM
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=2048

# ======================
# APPLICATION SETTINGS
# ======================
APP_NAME=Indic-Voice-AI
APP_VERSION=1.0.0
ENVIRONMENT=development  # development or production

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
# Update this with your ngrok URL when running on Colab
API_BASE_URL=http://localhost:8000

# Frontend
FRONTEND_URL=http://localhost:8501

# ======================
# AUDIO SETTINGS
# ======================
AUDIO_SAMPLE_RATE=16000
AUDIO_FORMAT=wav

# ======================
# MEMORY SETTINGS
# ======================
MAX_MEMORY_CONTEXT=5  # Number of past conversations to retrieve
EMBEDDING_DIMENSION=768  # IndicBERT embedding size

# ======================
# SAFETY SETTINGS
# ======================
ENABLE_CONTENT_MODERATION=true
GEMINI_SAFETY_THRESHOLD=BLOCK_MEDIUM_AND_ABOVE
